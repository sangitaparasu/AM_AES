<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.am_aes.ui.home.HomeFragment"
        android:label="@string/title_send"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.am_aes.ui.dashboard.DashboardFragment"
        android:label="@string/title_receiver"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.am_aes.ui.notifications.NotificationsFragment"
        android:label="@string/title_msgdetail"
        tools:layout="@layout/fragment_notifications" >
        <argument
            android:name="phoneNumber"
            app:argType="string" />
        <argument
            android:name="messageList"
            app:argType="com.example.am_aes.Model.MessageItem[]" />  />
    </fragment>

</navigation>