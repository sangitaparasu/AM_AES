<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerdeatils"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        app:layout_constraintBottom_toTopOf="@+id/layoutdetailMsgDescrip" />

    <LinearLayout
        android:id="@+id/layoutdetailMsgDescrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/detailMsgDescrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/detailSend"
                android:background="@android:color/transparent"
                android:hint="Enter Message"
                android:inputType="textMultiLine|textPersonName"
                android:maxLines="6"
                tools:ignore="Autofill" />
        </com.google.android.material.textfield.TextInputLayout>

<androidx.cardview.widget.CardView
    android:layout_margin="2dp"
    android:layout_gravity="center"
    android:id="@+id/detailSend"
    android:layout_width="40dp"
    android:layout_height="40dp"
    app:cardCornerRadius="50dp"
    android:backgroundTint="@color/green"

    >
        <ImageView
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:src="@drawable/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
</androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>